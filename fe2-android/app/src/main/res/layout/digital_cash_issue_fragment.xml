<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <variable
      name="view_model"
      type="com.github.dedis.popstellar.ui.digitalcash.DigitalCashViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragment_digital_cash_issue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.digitalcash.DigitalCashIssueFragment">

    <TextView
      android:id="@+id/digital_cash_issue_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      style="@style/title_style"
      android:text="@string/digital_cash_issue"
      app:layout_constraintBottom_toTopOf="@id/digital_cash_issue_spinner"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <Spinner
      android:id="@+id/digital_cash_issue_spinner"
      android:layout_width="@dimen/spinner_width_digital_cash"
      android:layout_height="@dimen/spinner_height_digital_cash"
      app:layout_constraintBottom_toTopOf="@id/digital_cash_issue_or"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/digital_cash_issue_title" />

    <TextView
      android:id="@+id/digital_cash_issue_or"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      style="@style/explication_text_style"
      android:text="@string/digital_cash_or"
      app:layout_constraintBottom_toTopOf="@id/digital_cash_issue_select"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/digital_cash_issue_title"/>

    <RadioGroup
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/digital_cash_issue_select"
      app:layout_constraintBottom_toTopOf="@id/digital_cash_issue_amount"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/digital_cash_issue_or">

      <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/digital_cash_select_1" />

      <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/digital_cash_select_2" />

      <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/digital_cash_select_3" />
    </RadioGroup>

    <EditText
      android:id="@+id/digital_cash_issue_amount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="@string/digital_cash_amount"
      android:inputType="numberDecimal"
      app:layout_constraintBottom_toTopOf="@id/digital_cash_issue_select"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/digital_cash_issue_issue" />

    <Button
      android:id="@+id/digital_cash_issue_issue"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/digital_cash_issue_button"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/digital_cash_issue_amount" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
