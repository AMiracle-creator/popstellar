<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="message"
            type="com.github.dedis.student20_pop.model.event.Event" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/witness_message_layout"
        android:layout_width="296dp"
        android:layout_height= "wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_text"
            android:gravity="center"
            android:text="Message Title"
            android:textSize="@dimen/size_body"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_description"
            android:text="Message Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_text" />

        <TextView
            android:id="@+id/message_id"
            android:text="Message ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_text" />

    </LinearLayout>

        <Button
            android:id="@+id/sign_message_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SIGN MESSAGE" />

    </LinearLayout>

</layout>