<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable
            name="message"
            type="com.github.dedis.student20_pop.model.WitnessMessage" />
        <variable
            name="viewmodel"
            type="com.github.dedis.student20_pop.detail.LaoDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/witness_message_layout"
            android:layout_width="271dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_text"
                android:gravity="center"
                android:text="@{message.title}"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_text"
                android:text="@{message.description}"
                android:textSize="13sp" />

        </LinearLayout>

        <Button
            android:id="@+id/sign_message_button"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:clickable="@{viewmodel.isWitness() &amp;&amp; !viewmodel.isSignedByCurrentWitness(message.getWitnesses())}"
            android:text="@{viewmodel.isSignedByCurrentWitness(message.getWitnesses())  ? ` SIGNED MESSAGE ` : ` SIGN MESSAGE `}" />

        <ImageButton
            android:id="@+id/witness_message_check_mark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="@{(viewmodel.isWitness() &amp;&amp; viewmodel.isSignedByCurrentWitness(message.getWitnesses())) ? View.VISIBLE : View.GONE}"
            android:contentDescription="@string/message_signed"
            android:src="@drawable/check_mark" />

    </LinearLayout>

</layout>