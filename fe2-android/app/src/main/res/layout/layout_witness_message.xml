<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="message"
            type="com.github.dedis.student20_pop.model.WitnessMessage" />
        <variable
            name="viewmodel"
            type="com.github.dedis.student20_pop.detail.LaoDetailViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/witness_message_layout"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_text"
                android:gravity="center"
                android:text="@{`Message Title : `+message.title}"
                android:textSize="@dimen/size_body"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/message_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_text"
                android:text="@{`Description : `+message.description}" />

            <TextView
                android:id="@+id/message_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_text"
                android:text="@{`Message ID : `+message.messageId}" />

        </LinearLayout>

        <Button
            android:id="@+id/sign_message_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="@{viewmodel.isWitness() &amp;&amp; !viewmodel.isSignedByCurrentWitness()}"
            android:text="@{viewmodel.isSignedByCurrentWitness()  ? ` SIGNED MESSAGE ` : ` SIGN MESSAGE `}" />

        <ImageButton
            android:id="@+id/witness_message_check_mark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="@{viewmodel.isWitness() &amp;&amp; !viewmodel.isSignedByCurrentWitness()}"
            android:contentDescription="@string/message_signed"
            android:src="@drawable/check_mark" />

    </LinearLayout>

</layout>