{
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "$id": "http://pop2020.dedis.ch/generic.json",
    "type": "object",
    "properties" : {
        "jsonrpc": {
            "const": "2.0"
        },
        "oneOf": [
            {
                "anyOf": [
                    { "$ref": "method/subscribe.json#/properties" },
                    { "$ref": "method/unsubscribe.json#/properties" },
                    { "$ref": "method/publish.json#/properties" },
                    { "$ref": "method/broadcast.json#/properties" },
                    { "$ref": "method/catchup.json#/properties" }
                ]
            },
            {
                "anyOf": [
                    { "$ref": "returns/return.json#/properties" },
                    { "$ref": "returns/returnCatchup.json#/properties" }
                ]
            }
        ],
        "id": {
            "description": "Unique identifier for the request",
            "type": "integer"
        }

    },
    "required": ["jsonrpc", "oneOf"]
}