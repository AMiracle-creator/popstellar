{
    "$comment": "By executing a subscribe action, a client can start receiving messages from that channel.",
    "$schema": "http://json-schema.org/draft/2019-09/schema#",
    "$id": "http://pop2020.dedis.ch/subscribe.json",
    "type": "object",
    "properties" : {
        "method": {
            "description": "Operation to be performed",
            "type": "string",
            "enum": ["subscribe"]
        },
        "params": {
            "description": "Content of the request",
            "type": "object",
            "properties": {
                "channel": {
                    "description": "Channel id",
                    "type": "string"
                }
            },
            "required": ["channel"]
        }

    },
    "required": ["method", "params"]
}